<p id="notice"><%= notice %></p>

<h1>Listing Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Internal comment</th>
      <th>Allow score</th>
      <th>Allow draft</th>
      <th>Allow critique</th>
      <th>Allow internal edits</th>
      <th>Turnover</th>
      <th>Number of editors</th>
      <th>Price</th>
      <th>Add on price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.internal_comment %></td>
        <td><%= package.allow_score %></td>
        <td><%= package.allow_draft %></td>
        <td><%= package.allow_critique %></td>
        <td><%= package.allow_internal_edits %></td>
        <td><%= package.turnover %></td>
        <td><%= package.number_of_editors %></td>
        <td><%= package.price %></td>
        <td><%= package.add_on_price %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

